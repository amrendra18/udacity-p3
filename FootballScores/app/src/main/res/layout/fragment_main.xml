<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/list_top_margin"
    android:layout_marginTop="@dimen/list_top_margin"
    android:background="@color/colorPrimaryLight">

    <ListView
        android:id="@+id/scores_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:divider="@android:color/transparent"
        android:dividerHeight="16sp"
        android:paddingEnd="@dimen/list_horizonal_margin"
        android:paddingLeft="@dimen/list_horizonal_margin"
        android:paddingRight="@dimen/list_horizonal_margin"
        android:paddingStart="@dimen/list_horizonal_margin"/>

    <include
        layout="@layout/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <include
        layout="@layout/error_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>

