<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/list_horizonal_margin"
    android:paddingLeft="@dimen/list_horizonal_margin"
    android:paddingRight="@dimen/list_horizonal_margin"
    android:paddingStart="@dimen/list_horizonal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".app.activity.AboutActivity$AboutFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/about_text"
        android:textSize="@dimen/leagueTextSize"
        android:textStyle="bold"
        />

</RelativeLayout>
