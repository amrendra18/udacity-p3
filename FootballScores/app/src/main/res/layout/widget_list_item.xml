<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="@dimen/divider_height">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_crest"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/hometeam_text"
            android:paddingEnd="@dimen/divider_height"
            android:paddingLeft="@dimen/divider_height"
            android:paddingRight="@dimen/divider_height"
            android:paddingStart="@dimen/divider_height"
            android:src="@drawable/ic_launcher_grey"/>

        <TextView
            android:id="@+id/home_name_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/hometeam"/>

        <TextView
            android:id="@+id/home_goal_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/score"/>

        <TextView
            android:id="@+id/status_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/status"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/away_crest"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/hometeam_text"
            android:paddingEnd="@dimen/divider_height"
            android:paddingLeft="@dimen/divider_height"
            android:paddingRight="@dimen/divider_height"
            android:paddingStart="@dimen/divider_height"
            android:src="@drawable/ic_launcher_grey"/>

        <TextView
            android:id="@+id/away_name_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/hometeam"/>

        <TextView
            android:id="@+id/away_goal_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/score"/>

        <TextView
            android:id="@+id/time_widget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/TeamNamesWidget"
            android:textStyle="bold"
            tools:text="@string/status"/>

    </LinearLayout>
</LinearLayout>
